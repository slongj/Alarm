<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alarm.jamesslong.alarm.Add_Alarm"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/add_alarm_alarm_name_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_alarm_alarm_name"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/add_alarm_alarm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:shadowColor="@color/white"
        android:layout_below="@id/add_alarm_alarm_name_header"/>

    <TextView
        android:id="@+id/add_alarm_alarm_dates_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_alarm_alarm_dates"
        android:textColor="@color/white"
        android:layout_below="@id/add_alarm_alarm_name"/>



</RelativeLayout>
